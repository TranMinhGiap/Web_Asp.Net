@model YT1.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container news_section_container">
    <div class="row">

        <div class="col-md-12">
            @using (Html.BeginForm("PostProfile", "Account"))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="UserName" value="@Model.UserName" readonly>

                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Full Name</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="FullName" value="@Model.FullName">

                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Phone</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Phone" value="@Model.Phone">

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Address</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Address" value="@Model.Address">

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Email" value="@Model.Email">

                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Cập nhật</button>
                </div>}
        </div>
        @*<div class="col-md-12">
            @Html.Action("LichSuDonHang", "Review")
        </div>*@


    </div>
</div>

@section style{
    <link rel="stylesheet" type="text/css" href="~/assets/User/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/assets/styles/main_styles.css">
    <style>
        .news_section_container {
            margin-top: 180px;
        }

        .row-item-new {
            margin-bottom: 20px;
        }

        .title-news {
            font-size: 24px;
            border-bottom: 1px solid;
            padding: 15px 0;
            margin-bottom: 25px;
        }

        .img-box img {
            max-width: 100%;
            max-height: 100%;
        }
    </style>
}

