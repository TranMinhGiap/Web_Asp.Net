@model IEnumerable<YT1.Models.ShoppingCartItem>

@if (Model != null && Model.Any())
{
    <div class="payment_title">
        <h3 style="margin: 0">Sản Phẩm</h3>
        <span class="checkout_items payment_number">@Model.Count()</span>
    </div>
    @*<h3 class="payment_title">Sản Phẩm <span class="checkout_items payment_number">@Model.Count()</span></h3>*@
    int idx = 0;
    var totalAmout = decimal.Zero;
    <table class="table table-bordered">
        @foreach (var item in Model)
        {
            totalAmout += item.TotalPrice;
            <tr>
                <td>@(++idx)</td>
                <td>@item.ProductName</td>
                <td>@string.Format("{0:#,##0}", item.Price) VND x @item.Quantity</td>
            </tr>
        }
        <tr>
            <th colspan="2">Tổng Tiền</th>
            <th>@string.Format("{0:#,##0}", totalAmout) VND</th>
        </tr>
    </table>
}
else
{
    @*<h3 class="payment_title">Sản Phẩm <span class="checkout_items payment_number">0</span></h3>*@
    <div class="payment_title">
        <h3 style="margin: 0">Sản Phẩm</h3>
        <span class="checkout_items payment_number">0</span>
    </div>
    <p style="color: red">* Chưa Có Sản Phẩm Nào !</p>
}

